{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": ["node", "youtube", "dailymotion", "vimeo", "soundcloud"],
    "typeRoots": [
      "../mintplayer-ng-dailymotion-api/types",
      "../mintplayer-ng-soundcloud-api/types",
      "../mintplayer-ng-vimeo-api/types",
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "useDefineForClassFields": false
  },
  "exclude": [
    "src/test-setup.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "jest.config.ts"
  ],
  "include": ["**/*.ts"]
}
