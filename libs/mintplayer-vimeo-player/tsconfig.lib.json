{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": ["node", "vimeo"],
    "typeRoots": ["./types", "../../node_modules/@types"],
    "useDefineForClassFields": false
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "jest.config.ts"],
  "include": [
    "**/*.ts",
    "types/**/*.d.ts"
  ]
}
