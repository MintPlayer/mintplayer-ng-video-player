{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": ["node", "soundcloud"],
    "typeRoots": ["./types", "../../node_modules/@types"],
    "useDefineForClassFields": false
  },
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts", "jest.config.ts"],
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts"
  ]
}
