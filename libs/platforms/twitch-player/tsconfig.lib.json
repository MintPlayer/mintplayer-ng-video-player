{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": ["node", "twitch"],
    "typeRoots": ["./types", "../../../node_modules/@types"]
  },
  "exclude": ["jest.config.ts", "**/*.spec.ts", "**/*.test.ts"],
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts"
  ]
}
