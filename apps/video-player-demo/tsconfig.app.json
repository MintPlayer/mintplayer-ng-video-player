{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node", "youtube", "dailymotion", "vimeo", "soundcloud", "twitch", "mixcloud"],
    "typeRoots": [
      "../../libs/mintplayer-ng-dailymotion-player/types",
      "../../libs/mintplayer-ng-mixcloud-player/types",
      "../../libs/mintplayer-ng-soundcloud-player/types",
      "../../libs/mintplayer-ng-twitch-player/types",
      "../../libs/mintplayer-ng-vimeo-player/types",
      "../../node_modules/@types",
    ],
    "target": "ES2022",
    "useDefineForClassFields": false
  },
  "files": ["src/main.ts", "src/polyfills.ts"],
  "include": ["src/**/*.d.ts"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "jest.config.ts"]
}
